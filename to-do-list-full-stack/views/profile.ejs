    </div>
    <div class="col-sm-6">
      <h3>To-Do:</h3>
      <ul class="messages">
        <% for(var i=0; i<messages.length; i++) {%>
          <li class="message">
            <span>
              <%= messages[i].task %>
            </span>
            <input type="text" class="hide" value="<%= messages[i].msg %>" placeholder="task">
            <span class="hide"><i data-id="<%= messages[i]._id %>" class="fas fa-save" aria-hidden="true"></i></span>
            <span><i data-id="<%= messages[i]._id %>" class="fa fa-pencil" aria-hidden="true"></i></span>
            <span><i data-id="<%= messages[i]._id %>" class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>
      </ul>
      <h2>Add a task</h2>
      <% if (user.local.email) { %>
        <form action="/messages" method="POST">
          <input type="text" placeholder="Task" name="task">
          <button type="submit">Add Task</button>
        </form>
    </div>
    <% } %>
  </div>
  <script src="main.js"></script>
</body>

</html>